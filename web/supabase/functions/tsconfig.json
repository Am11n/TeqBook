{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "deno.window"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["deno-window"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}

